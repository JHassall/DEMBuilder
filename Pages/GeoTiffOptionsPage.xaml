<UserControl x:Class="DEMBuilder.Pages.GeoTiffOptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="GeoTIFF Export Options" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>
            
            <TextBlock Text="Configure your GeoTIFF export settings for optimal GIS compatibility" 
                       FontSize="14" 
                       Foreground="Gray" 
                       Margin="0,0,0,30"/>

            <!-- Coordinate System Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Coordinate System" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <RadioButton x:Name="UtmRadioButton" 
                                 Content="UTM (Universal Transverse Mercator)" 
                                 IsChecked="True" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Most accurate for local measurements and agricultural applications" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,10"/>
                    
                    <RadioButton x:Name="Wgs84RadioButton" 
                                 Content="WGS84 Geographic (Latitude/Longitude)" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Universal compatibility with all GIS software, slight distortion for local measurements" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,10"/>
                    
                    <RadioButton x:Name="LocalRadioButton" 
                                 Content="Local Tangent Plane (Current System)" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Matches your current projection setup, requires custom projection file" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- Export Type Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Export Type" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <RadioButton x:Name="SingleFileRadioButton" 
                                 Content="Single File GeoTIFF" 
                                 IsChecked="True" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Best for GIS import, one file per field, easier to manage" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,10"/>
                    
                    <RadioButton x:Name="TiledRadioButton" 
                                 Content="Tiled GeoTIFF" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Better for very large areas (>500 hectares), multiple files with index" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- File Options Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="File Options" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Data Integrity Mode: No Compression" 
                               FontWeight="SemiBold" 
                               Foreground="DarkGreen" 
                               Margin="0,5"/>
                    <TextBlock Text="• Ensures 100% preservation of elevation data precision" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,5"/>
                    <TextBlock Text="• Critical for precision agriculture and RTK GPS data" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,10"/>
                    
                    <CheckBox x:Name="ColorPaletteCheckBox" 
                              Content="Include Elevation Color Palette" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    <TextBlock Text="• Adds color-coded elevation visualization for immediate viewing in GIS" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,15"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Resolution:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="ResolutionTextBox" 
                                 Text="0.25" 
                                 Width="80" 
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="meters/pixel" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="• Higher resolution = larger file size, more detail" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,5,0,5"/>
                </StackPanel>
            </Border>

            <!-- Metadata Options Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Metadata Options" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="FarmNameCheckBox" 
                              Content="Include Farm Name in Metadata" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="FieldNameCheckBox" 
                              Content="Include Field Name in Metadata" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="ProcessingDateCheckBox" 
                              Content="Include Processing Date/Time" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="GpsCountCheckBox" 
                              Content="Include GPS Point Count" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="ElevationRangeCheckBox" 
                              Content="Include Elevation Range (Min/Max)" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    
                    <TextBlock Text="• Metadata helps identify and organize files in GIS software" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="0,10,0,5"/>
                </StackPanel>
            </Border>

            <!-- Preview Section -->
            <Border BorderBrush="LightBlue" BorderThickness="2" Padding="15" Background="AliceBlue">
                <StackPanel>
                    <TextBlock Text="Export Preview" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="PreviewTextBlock" 
                               Text="Estimated file size: ~2.5 MB | Format: Single GeoTIFF with UTM coordinates" 
                               FontSize="12" 
                               Margin="0,0,0,5"/>
                    
                    <TextBlock x:Name="FilenamePreviewTextBlock" 
                               Text="Filename: MyFarm_BackPaddock_240724.tif" 
                               FontSize="12" 
                               FontStyle="Italic" 
                               Margin="0,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- Progress Bar (Initially Hidden) -->
            <ProgressBar x:Name="ExportProgressBar" 
                         Height="20" 
                         Margin="0,20,0,10" 
                         Visibility="Collapsed"/>
            
            <TextBlock x:Name="ProgressTextBlock" 
                       Text="" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10" 
                       Visibility="Collapsed"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button x:Name="BackButton" 
                        Content="← Back" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,10,0" 
                        Click="BackButton_Click"/>
                <Button x:Name="ExportButton" 
                        Content="Export GeoTIFF" 
                        Width="120" 
                        Height="35" 
                        Background="DodgerBlue" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        Click="ExportButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

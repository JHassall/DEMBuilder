<UserControl x:Class="DEMBuilder.Pages.BoundaryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="300">
    <StackPanel Margin="20">
        <TextBlock Text="Step 2: Select Farm &amp; Field Boundary" FontWeight="Bold" FontSize="24" Margin="0,0,0,20"/>

        <TextBlock Text="Define the boundary to select points for a specific farm and field."
                   TextWrapping="Wrap"/>

        <TextBlock Text="Click 'Start Drawing' and then click on the map to create the boundary polygon. Click 'Finish Drawing' when done."
                   TextWrapping="Wrap" Margin="0,10,0,0"/>

        <StackPanel Orientation="Vertical" Margin="0,20,0,0">
            <Button x:Name="StartDrawingButton" Content="Start Drawing" Click="StartDrawingButton_Click" Margin="0,0,0,5" Padding="10,5" MinWidth="150"/>
            <Button x:Name="FinishDrawingButton" Content="Finish Drawing" Click="FinishDrawingButton_Click" IsEnabled="False" Margin="0,0,0,15" Padding="10,5" MinWidth="150"/>
            
            <Button x:Name="ClearBoundaryButton" Content="Clear" Click="ClearBoundaryButton_Click" Margin="0,0,0,5" Padding="10,5" MinWidth="150"/>
            <Button x:Name="DeletePointsButton" Content="Delete Points" Click="DeletePointsButton_Click" IsEnabled="False" Margin="0,0,0,5" Padding="10,5" MinWidth="150"/>
        </StackPanel>

        <!-- Farm and Field Input -->
        <StackPanel x:Name="FarmFieldInputPanel" Margin="0,20,0,0" IsEnabled="False">
            <TextBlock Text="Farm Name" FontWeight="SemiBold"/>
            <TextBox x:Name="FarmNameTextBox" Margin="0,2,0,5"/>

            <TextBlock Text="Field Name" FontWeight="SemiBold" Margin="0,5,0,0"/>
            <TextBox x:Name="FieldNameTextBox" Margin="0,2,0,10"/>
            
            <TextBlock x:Name="StatusTextBlock" TextWrapping="Wrap" Margin="0,10,0,0" FontWeight="Bold" Visibility="Collapsed" />
        </StackPanel>

        <Button x:Name="ApplyBoundaryButton" Content="Assign" Click="ApplyBoundaryButton_Click" IsEnabled="False" Margin="0,15,0,0" Padding="10,5" MinWidth="150"/>

        <TextBlock x:Name="BoundaryStatusTextBlock" Margin="0,10,0,0" TextWrapping="Wrap"/>

    </StackPanel>
</UserControl>

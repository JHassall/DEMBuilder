<UserControl x:Class="DEMBuilder.Pages.TextFileOptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Text File Export Options" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Configure your text file export settings for GIS compatibility" 
                       FontSize="14" 
                       Foreground="Gray" 
                       Margin="0,0,0,30"/>

            <!-- File Format Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="File Format" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <RadioButton x:Name="AsciiGridRadioButton" 
                                 Content="ASCII Grid (.asc)" 
                                 IsChecked="True" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Standard ESRI ASCII grid format, compatible with most GIS software" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,10"/>
                    
                    <RadioButton x:Name="PlainTextRadioButton" 
                                 Content="Plain Text (.txt)" 
                                 Margin="0,5"/>
                    <TextBlock Text="• Simple text format with X, Y, Z coordinates" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- Export Options Section -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Export Options" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="Resolution:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="ResolutionTextBox" 
                                 Text="0.25" 
                                 Width="80" 
                                 VerticalAlignment="Center"/>
                        <TextBlock Text="meters/pixel" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="• Higher resolution = more detail, larger file size" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,5,0,15"/>
                    
                    <CheckBox x:Name="IncludeHeaderCheckBox" 
                              Content="Include header information" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    <TextBlock Text="• Adds coordinate system and extent information to file header" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,10"/>
                    
                    <CheckBox x:Name="IncludeNoDataCheckBox" 
                              Content="Use NoData values for empty areas" 
                              IsChecked="True" 
                              Margin="0,5"/>
                    <TextBlock Text="• Areas outside boundary will use -9999 as NoData value" 
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="20,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- Preview Section -->
            <Border BorderBrush="LightBlue" BorderThickness="2" Padding="15" Background="AliceBlue">
                <StackPanel>
                    <TextBlock Text="Export Preview" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock x:Name="PreviewTextBlock" 
                               Text="Estimated file size: ~1.2 MB | Format: ASCII Grid with header" 
                               FontSize="12" 
                               Margin="0,0,0,5"/>
                    
                    <TextBlock x:Name="FilenamePreviewTextBlock" 
                               Text="Filename: MyFarm_BackPaddock_240724.asc" 
                               FontSize="12" 
                               FontStyle="Italic" 
                               Margin="0,0,0,5"/>
                </StackPanel>
            </Border>

            <!-- Progress Bar (Initially Hidden) -->
            <ProgressBar x:Name="ExportProgressBar" 
                         Height="20" 
                         Margin="0,20,0,10" 
                         Visibility="Collapsed"/>
            
            <TextBlock x:Name="ProgressTextBlock" 
                       Text="" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10" 
                       Visibility="Collapsed"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                <Button x:Name="BackButton" 
                        Content="← Back" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,10,0" 
                        Click="BackButton_Click"/>
                <Button x:Name="CancelButton" 
                        Content="Cancel" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,10,0" 
                        Background="LightCoral" 
                        Foreground="White" 
                        Visibility="Collapsed" 
                        Click="CancelButton_Click"/>
                <Button x:Name="ExportButton" 
                        Content="Export Text File" 
                        Width="120" 
                        Height="35" 
                        Background="DodgerBlue" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        Click="ExportButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

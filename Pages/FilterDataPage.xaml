<UserControl x:Class="DEMBuilder.Pages.FilterDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="350">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Step 3: Filter Points" FontWeight="Bold" FontSize="24" Margin="0,0,0,20"/>

                <!-- HDOP Filter -->
                <GroupBox Header="HDOP (Horizontal Dilution of Precision)" FontWeight="SemiBold" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <TextBlock x:Name="HdopRangeText" Text="Range: N/A" FontStyle="Italic" Margin="0,0,0,5"/>
                        <TextBlock Text="Filter to HDOP less than:" Margin="0,5,0,0"/>
                        <TextBox x:Name="MaxHdopTextBox"/>
                    </StackPanel>
                </GroupBox>

                <!-- RTK Status Filter -->
                <GroupBox Header="RTK Fix Status" FontWeight="SemiBold" Margin="0,0,0,10">
                    <StackPanel Margin="5" x:Name="RtkStatusPanel">
                        <CheckBox Content="RTK Fix (4)" Tag="4" IsChecked="True"/>
                        <CheckBox Content="RTK Float (5)" Tag="5" IsChecked="True"/>
                        <CheckBox Content="Differential GPS (2)" Tag="2"/>
                        <CheckBox Content="SPS (1)" Tag="1"/>
                        <CheckBox Content="No Fix (0)" Tag="0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Age of Differential Filter -->
                <GroupBox Header="Age of Differential Data (seconds)" FontWeight="SemiBold">
                    <StackPanel Margin="5">
                        <TextBlock x:Name="AgeOfDiffRangeText" Text="Range: N/A" FontStyle="Italic" Margin="0,0,0,5"/>
                        <TextBlock Text="Filter to Age less than:" Margin="0,5,0,0"/>
                        <TextBox x:Name="MaxAgeOfDiffTextBox"/>
                    </StackPanel>
                </GroupBox>

                <Button x:Name="ApplyFilterButton" Content="Apply Filter" Margin="0,20,0,0" HorizontalAlignment="Left" Click="ApplyFilterButton_Click"/>
                <TextBlock x:Name="FilterSummaryTextBlock" Margin="0,10,0,0" TextWrapping="Wrap"/>

                <StackPanel Margin="0,10,0,0">
                    <TextBlock x:Name="TotalPointsText" Text="Total Points: 0"/>
                    <TextBlock x:Name="FilteredPointsText" Text="Included Points: 0"/>
                    <TextBlock x:Name="ExcludedPointsText" Text="Excluded Points: 0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

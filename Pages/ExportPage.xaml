<UserControl x:Class="DEMBuilder.Pages.ExportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Page Header -->
            <TextBlock Text="Step 6: Export Format Selection" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>
            
            <TextBlock x:Name="StatusTextBlock" 
                       Text="Ready to export DEM data from 35,438 GPS points." 
                       FontSize="14" 
                       Margin="0,0,0,30"/>

            <TextBlock Text="Choose your export format:" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,20"/>

            <!-- Export Format Options -->
            <Border BorderBrush="LightGray" BorderThickness="2" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <RadioButton x:Name="TextFileRadioButton" 
                                 Content="Text File (.txt)" 
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,10" 
                                 GroupName="ExportFormat"/>
                    <TextBlock Text="• ASCII grid format compatible with most GIS software"
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="25,0,0,5"/>
                    <TextBlock Text="• Human-readable text format"
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="25,0,0,15"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="LightGray" BorderThickness="2" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <RadioButton x:Name="GeoTiffRadioButton" 
                                 Content="GeoTIFF (.tif)" 
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,10" 
                                 GroupName="ExportFormat" 
                                 IsChecked="True"/>
                    <TextBlock Text="• Industry standard for GIS software (QGIS, ArcGIS, etc.)"
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="25,0,0,5"/>
                    <TextBlock Text="• Embedded coordinate system and metadata"
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="25,0,0,5"/>
                    <TextBlock Text="• Multiple coordinate system options available"
                               FontSize="12" 
                               Foreground="Gray" 
                               Margin="25,0,0,15"/>
                </StackPanel>
            </Border>

            <Border BorderBrush="Green" BorderThickness="2" Padding="20" Background="#F0FFF0">
                <StackPanel>
                    <RadioButton x:Name="RgFdemRadioButton" 
                                 Content="RgF DEM (.RgFdem) - Recommended" 
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,10" 
                                 GroupName="ExportFormat"/>
                    <TextBlock Text="• Single file optimized for agricultural operations"
                               FontSize="12" 
                               Foreground="DarkGreen" 
                               Margin="25,0,0,5"/>
                    <TextBlock Text="• Perfect for thumb drives and wireless transfer to ABLS software"
                               FontSize="12" 
                               Foreground="DarkGreen" 
                               Margin="25,0,0,5"/>
                    <TextBlock Text="• Includes DEM data, metadata, coordinate system, and documentation"
                               FontSize="12" 
                               Foreground="DarkGreen" 
                               Margin="25,0,0,15"/>
                </StackPanel>
            </Border>

            <!-- Navigation Buttons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,40,0,0">
                <Button x:Name="BackButton" 
                        Content="← Back" 
                        Width="100" 
                        Height="35" 
                        Margin="0,0,15,0" 
                        Click="BackButton_Click"/>
                <Button x:Name="NextButton" 
                        Content="Next →" 
                        Width="100" 
                        Height="35" 
                        Background="DodgerBlue" 
                        Foreground="White" 
                        FontWeight="SemiBold" 
                        Click="NextButton_Click"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>

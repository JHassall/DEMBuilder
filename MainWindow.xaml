<Window x:Class="DEMBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMBuilder"
        xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        mc:Ignorable="d"
        Title="DEMBuilder"
        Height="600" Width="900"
        Loaded="MainWindow_Loaded"
        WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Load GPS Data..."/>
                <Separator />
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Generate DEM..."/>
            </MenuItem>
        </Menu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*" MinWidth="300" MaxWidth="450"/>
            </Grid.ColumnDefinitions>

            <!-- Map Area -->
            <Grid Grid.Column="0" Margin="0,20,0,0">
                <gmaps:GMapControl x:Name="MainMap" MouseWheelZoomType="MousePositionAndCenter"/>

                <!-- Zoom Controls -->
                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                    <Button x:Name="ZoomInButton" Content="+" Width="30" Height="30" Click="ZoomInButton_Click" Margin="2" ToolTip="Zoom In"/>
                    <Button x:Name="ZoomOutButton" Content="-" Width="30" Height="30" Click="ZoomOutButton_Click" Margin="2" ToolTip="Zoom Out"/>
                </StackPanel>
            </Grid>

            <!-- GridSplitter to resize Map and Wizard areas -->
            <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="LightGray" ShowsPreview="True"/>

            <!-- Wizard Area -->
            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="0" Margin="0,20,0,0">
                <DockPanel Margin="5">
                    <Grid DockPanel.Dock="Bottom" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
                            <Button x:Name="BackButton" Content="Back" Click="BackButton_Click" IsEnabled="False" Margin="0,0,5,0"
                                    Padding="10,5" MinWidth="75">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" Margin="5,0,0,0"
                                    Padding="10,5" MinWidth="75">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Frame x:Name="WizardFrame" NavigationUIVisibility="Hidden"/>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
